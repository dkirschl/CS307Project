<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/requestString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[name] sent \nyou a friend request"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/declineRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/acceptRequest"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="No"
        android:textSize="20sp" />

    <Button
        android:id="@+id/acceptRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/requestString"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/declineRequest"
        android:text="Yes"
        android:textSize="20sp" />

</RelativeLayout>

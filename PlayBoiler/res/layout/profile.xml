<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:id="@+id/main" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/profileTitle"
        android:text="My Profile" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileTitle"
        android:id="@+id/profileImage"
        android:layout_margin="5sp"
        android:src="@drawable/no_image" />
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/profileTitle"
        android:layout_below="@id/profileTitle"
        android:layout_toRightOf="@id/profileImage"
        android:id="@+id/name"
        android:gravity="center_vertical"
        android:padding="6sp"
        android:text="Craig Brentz"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/profileTitle"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/profileImage"
        android:id="@+id/alias"
        android:gravity="center_vertical"
        android:padding="6sp"
        android:text="&quot;Krieg_01&quot;"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alias"
        android:layout_toRightOf="@id/profileImage"
        android:gravity="center"
        android:padding="6sp"
        android:text="Age : "
        android:textSize="18sp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/profileTitle"
        android:layout_below="@id/alias"
        android:layout_toRightOf="@id/age"
        android:gravity="center"
        android:padding="6sp"
        android:text="20"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/age"
        android:layout_toRightOf="@id/profileImage"
        android:gravity="center"
        android:padding="6sp"
        android:text="Gender : "
        android:textSize="18sp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/profileTitle"
        android:layout_below="@id/age"
        android:layout_toRightOf="@id/gender"
        android:gravity="center"
        android:padding="6sp"
        android:text="Male"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:text="About Me :"
        android:textSize="18sp"
        android:padding="10sp" />
    
    <TextView 
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="144sp"
        android:layout_below="@id/about"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:textSize="18sp"
        android:background="@drawable/back"
        android:padding="10sp"
        android:text="This is a test to see how long a profile can afford to be.\nThis is a test to see how long a profile can afford to be.\nThis is a test to see how long a profile can afford to be.\nThis is a test to see how long a profile can afford to be.\nThis is a test to see how long a profile can afford to be.\nThis is a test to see how long a profile can afford to be.\n"/>
    
    <TextView
        android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio"
        android:text="Proficiencies :"
        android:textSize="18sp"
        android:padding="10sp" />
    
    <TextView
        android:id="@+id/skills_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skills"
        android:text="Volleyball : 8\nUltimate : 6\nBasketball : 2"
        android:textSize="18sp"
        android:padding="10sp" />
    
    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/skills_list"
        android:text="Edit Profile" />

</RelativeLayout>

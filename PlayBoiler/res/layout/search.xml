<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:id="@+id/searchTitle"
        android:text="Find a Game"/>
    
    <EditText
        android:id="@+id/searchSport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/searchTitle"
        android:textSize="25sp"
        android:hint="Enter sport" />
    
    <EditText
        android:id="@+id/searchLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/searchSport"
        android:textSize="25sp"
        android:hint="Enter Location" />
    
    <TextView
        android:id="@+id/searchEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchSelectDate"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/searchLocation"
        android:layout_toLeftOf="@+id/searchSelectDate"
        android:layout_margin="5sp"
        android:textSize="30sp"
        android:hint="Date" />

    <Button
        android:id="@+id/searchSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5sp"
        android:layout_below="@id/searchLocation"
        android:text="Select Date" />
    <TextView
        android:id="@+id/searchEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchSelectTime"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/searchEventDate"
        android:layout_toLeftOf="@+id/searchSelectTime"
        android:layout_margin="5sp"
        android:textSize="30sp"
        android:hint="Time" />
    <Button
        android:id="@+id/searchSelectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5sp"
        android:layout_below="@id/searchSelectDate"
        android:text="Select Time" />
    
    <EditText
        android:id="@+id/compSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchSelectTime"
        android:textSize="30sp"
        android:hint="Competitivness"
        android:inputType="number"
        />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/compSearch"
        android:textSize="25sp"
        android:text="Search" />
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchButton">
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
</ScrollView>
</RelativeLayout>

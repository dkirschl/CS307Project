            android:paddingLeft="5sp"
            android:background="@drawable/border">
            
            <TextView
                android:id="@+id/e1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder Title 1"
                android:textSize="20sp"/>
            
            <TextView
                android:id="@+id/e1Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder Date 1"
                android:textSize="20sp"/>
            
            <TextView
                android:id="@+id/e1Sport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder Sport 1"
                android:textSize="20sp"/>
            
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/e2"
            android:layout_width="match_parent"
